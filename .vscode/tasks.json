{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: nvcc 生成活动文件",
            "command": "/usr/local/cuda/bin/nvcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/out/${fileBasenameNoExtension}",
                "-arch",
                "sm_89",
                // 下面两条强制生成可重定向代码，允许核函数嵌套
                // "-rdc",
                // "true",
                // 下面两条禁用一级缓存
                // "-Xptxas",
                // "-dlcm=cg"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: /usr/local/cuda/bin/nvcc"
        }
    ]
}